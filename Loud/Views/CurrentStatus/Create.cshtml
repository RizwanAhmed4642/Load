					"orderMulti": false, // for disable multiple column at once
					"initComplete": function (settings, json) {

						//console.log(json);
					},
					"pageLength": 10,
					"ajax": {
						//"url": '/CurrentStatus/GetAllCurrentStatussInJson/,
						"url": "@Url.Action("GetAllCurrentStatussInJson", "CurrentStatus")",
