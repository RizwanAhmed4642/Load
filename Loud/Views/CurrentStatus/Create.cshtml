							},
							"orderable": false,
							"searchable": false
						},
						{
							"data": null, width: '', class: '',
							"render": function (data, type, full, meta) {
								var id = full["id"];
								return `<img src='/media/icons/private-primary-school-${id}.png' width='26px' height='32px' />`
							},
							"orderable": false,
							"searchable": false
						},
						{
							"data": null, width: '', class: '',
							"render": function (data, type, full, meta) {
								var id = full["id"];
