@model string
@{
    ViewData["Title"] = "Create Role";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row pt-2">
            <div class="col-xl-12">
                <h1 class="text-center font-weight-bold">@ViewData["Title"]</h1>
                <hr />
                <p>@ViewData["Message"]</p>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Role" asp-action="Create" asp-antiforgery="true" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="name">Role Name</label>
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" name="name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a class="btn btn-danger" asp-controller="Role" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>