                                <label asp-for="ID" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input asp-for="ID" class="form-control form-control-sm" />
                                    <span asp-validation-for="ID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-9 border">
