                                            <label asp-for="MapLink" class="col-sm-3 col-form-label"></label>
                                            <div class="col-sm-9">
                                                <input asp-for="MapLink" class="form-control form-control-sm" />
                                                <span asp-validation-for="MapLink" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 border">
                            <div class="row pt-2">
                                <div class="col-xl-6" hidden="hidden">
                                    <div class="form-group row" style="margin-top:-10px;">
                                        <label asp-for="OverideID" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="OverideID" class="form-control form-control-sm select2" asp-items="ViewBag.OverideID"></select>
                                            <span asp-validation-for="OverideID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-10">
                                    <div class="form-group row">
                                        <label asp-for="SREStatusID" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="SREStatusID" class="form-control form-control-sm select2" asp-items="ViewBag.SREStatusID"></select>
                                            <span asp-validation-for="SREStatusID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-2">
                                    <div class="form-group row">
                                        <img src="~/media/icons/high-school-1.png" alt="School Icon" id="schoolIcon" width="26px" height="32px" />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group row" style="margin-top:-10px;">
                                        <label asp-for="type" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="type" class="form-control form-control-sm select2" asp-items="ViewBag.type" required="required"></select>
                                            <span asp-validation-for="type" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="form-group row" style="margin-top:-10px;">
                                        <label asp-for="AreaID" class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <select asp-for="AreaID" class="form-control form-control-sm select2" asp-items="ViewBag.AreaID"></select>
                                            <span asp-validation-for="AreaID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="form-group row" style="margin-top:-10px;">
                                        <label asp-for="Lat" class="col-sm-3 col-form-label">Lat</label>
                                        <div class="col-sm-9">
