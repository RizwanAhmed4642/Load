@model SAS.Models.ViewModels.SASViewModels.HighSchoolVM
@{
    ViewData["Title"] = "High School Multi Task";
}
<style>
    /*Records to show in only one line not goes to next line*/
/*    td {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}*/

</style>

<div class="loaderBar"></div>
<div class="content-wrapper">
    <div class="container-fluid" style="font-size:11px;">
        <div class="row pt-2">
            <div class="col-xl-12">
                @*<h5 class="text-center font-weight-bold">@Model.type @ViewData["Title"]</h5>
                <p>@ViewData["Message"]</p>*@
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title text-center font-weight-bold">@Model.type @ViewData["Title"] </h5>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="display table table-striped table-borderless w-100" id="HighSchoolsTable">
                            <thead>
                                <tr class="font-weight-bold">
                                    <td class=""> Name </td>
                                    <td class=""> Street Address </td>
                                    <td class=""> Town </td>
                                    <td class=""> State </td>
                                    <td class=""> P.Code </td>
                                    <td class=""> MapAcc </td>
                                    <td class=""> SRE Status </td>
                                    <td class=""> Next Task(DoBy) </td>
                                    <td class=""> Task Subject </td>
                                    <td class=""> Days </td>
                                    <td class=""> E-mail </td>
                                    <td class=""> Last Info Sent </td>
                                    <td class=""> Associated P.Schools </td>
                                    <td class=""> Associated Churches </td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
