@model ApplicationUser
@{
    ViewData["Title"] = "Edit User";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row pt-2">
            <div class="col-xl-12">
                <h1 class="text-center font-weight-bold">@ViewData["Title"]</h1>
                <hr />
                <p>@ViewData["Message"]</p>

                <div asp-validation-summary="All" class="text-danger"></div>

                <form method="post" asp-controller="SuperAdmin" asp-action="Edit" asp-antiforgery="true" class="form-horizontal">
                    <div class="row">
                        <div class="col-xl-4" hidden="hidden">
                            <div class="form-group">
                                <label class="control-label" asp-for="Id">Id: </label>
                                <input class="form-control form-control-sm" asp-for="Id" disabled />
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label class="control-label" asp-for="FirstName">First Name</label>
                                <input class="form-control form-control-sm" asp-for="FirstName" />
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label class="control-label" asp-for="LastName">Last Name</label>
                                <input class="form-control form-control-sm" asp-for="LastName" />
                            </div>
                        </div>
                        <div class="col-xl-4" hidden="hidden">
                            <div class="form-group">
                                <label class="control-label" asp-for="UserName">Username</label>
                                <input class="form-control form-control-sm" asp-for="UserName" />
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label class="control-label" asp-for="Email">E-mail</label>
                                <input class="form-control form-control-sm" asp-for="Email" />
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="form-group">
                                <label class="control-label">User Role</label>
                                <select class="form-control form-control-sm" name="UserRole" id="UserRole">
                                    <option value="" disabled selected hidden>Select User Role</option>
                                    <option value="Administrator">Administrator</option>
                                    <option value="Editor">Editor</option>
                                    <option value="Reader">Reader</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-xl-4">
                            <div class="form-group">
                                <label asp-for="UserCountry" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <select asp-for="UserCountry" class="form-control select2" asp-items="Html.GetEnumSelectList<SAS.Models.ViewModels.SASViewModels.EnumCountriesVM>()"></select>
                                    <span asp-validation-for="UserCountry" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control form-control-sm" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-12 text-center">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger" asp-controller="SuperAdmin" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {

            $('#UserRole').val("@ViewBag.CurrentRole");
        });

    </script>
}
