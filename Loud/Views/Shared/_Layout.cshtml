    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCEDdTqyyCHunwaTc0XCE8M-muXz_mx-WM&libraries=visualization"></script>
    <!-- Custom site JS -->
    <script src="~/js/GoogleMapsHandlingSite.js"></script>
    <script src="~/js/mysite.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/adminlte/dist/js/demo.js"></script>
    <!-- To open a form as a popup form -->
    <script src="~/js/popup.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Scripts_1", required: false)
    @await RenderSectionAsync("Scripts_2", required: false)
    @await RenderSectionAsync("Scripts_3", required: false)

    <script>
        $(document).ready(function () {


            //This should trigger the side bar menu to collapse
            $('a[data-widget="pushmenu"]').click();

            $('.select2').select2({
                placeholder: "Select an option...",
                theme: "classic",
                width: "100%"
            });
            //To add Summernote
            $('textarea').summernote();

            //Making Short-cut Keys to add and remove Summernote 
            document.addEventListener('keydown', function (event) {
                //To remove Summernote from all textarea elements on a page
                if (event.ctrlKey && event.shiftKey && event.key === 'E') {
                    //To remove Summernote
                    $('textarea').each(function () {
                        $(this).summernote('destroy');
                    });
                }
                //To add Summernote to all textarea elements on a page
                else if (event.ctrlKey && event.shiftKey && event.key === 'U') {
                    //To remove Summernote
                    $('textarea').each(function () {
                        $(this).summernote('destroy');
                    });
                    //To add Summernote
                    $('textarea').summernote();
                }
            });

        });

    </script>
</body>
</html>
