    <script src="~/adminlte/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- Summer Note -->
    <script src="~/lib/summernote/summernote.min.js"></script>
    <!-- J-Query UI-->
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <!-- Moment Library to convert date in any format -->
    <script src="~/lib/moment/moment.min.js"></script>
    <!-- Select 2 -->
    <script src="~/adminlte/plugins/select2/js/select2.min.js"></script>
    <!-- Parsley -->
    <script src="~/lib/parsley/parsley.min.js"></script>
    <!-- Notifyjs -->
    <script src="~/lib/notifyjs/notifications.min.js"></script>
